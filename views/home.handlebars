<div class='container'>
  <h1>Welcome {{name}} to admin page</h1>
  <h2>New Product Upload</h2>
  <form
    action='/dimashki/admin/upload'
    method='post'
    enctype='multipart/form-data'
  >
    <div class='file-field input-field'>
      <div class='btn'>
        <span>File</span>
        <input name='myProduct' type='file' />
      </div>
      <div class='file-path-wrapper'>
        <input class='file-path validate' type='text' />
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <textarea
          id='textarea1'
          class='materialize-textarea'
          name='productNumber'
        ></textarea>
        <label for='textarea1'>Product Number</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <textarea
          id='textarea1'
          class='materialize-textarea'
          name='productDesc'
        ></textarea>
        <label for='textarea1'>Product description</label>
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <textarea
          id='textarea1'
          class='materialize-textarea'
          name='productPrice'
        ></textarea>
        <label for='textarea1'>Product price</label>
      </div>
    </div>
    <button type='submit' class='btn'>Submit</button>
  </form>
</div>