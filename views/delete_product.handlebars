<div class='container'>
  <h1 style="color: #004d40; margin: auto; width: 80%; padding: 10px; ">Welcome to admin page</h1>
  <h4 style="color: #37474f; margin: auto; width: 80%; text-align: center;">Select a Product to Delete</h2>
  <ul style='display: flex; flex-wrap: wrap; justify-content: space-around;'>
  {{#each products}}
    <li>
      <div class='row'>
        <div class='col s12 m12'>
          <div class='card'>
            <div class='card-image'>
              <img
                src='/uploads/{{this.productName}}'
                alt=''
                style='width: 300px; margin: auto; padding: 10px; max-height: 300px;'
              />
              <span class='card-title'>Title</span>
            </div>
            <div
              class='card-content'
              style='margin: auto; width: 90%; text-align: center;'
            >
              <p>Product Id: {{this.productId}}</p>
            </div>
            <div
              class='card-content'
              style='margin: auto; width: 90%; text-align: center;'
            >
              <p>Product No: {{this.productNumber}}</p>
            </div>
            <div
              class='card-content'
              style='margin: auto; width: 90%; text-align: center; color: #37474f;'
            >
              <p>{{this.productDesc}}</p>
            </div>
            <div class='card-price'>
              <p
                style='margin: auto; width: 90%; text-align: center; padding: 10px; color: #b71c1c;'
              >{{this.productPrice}}</p>
            </div>
          </div>
        </div>
      </div>
    </li>
  {{/each}}
</ul>
  <form
    action='/dimashki/admin/erase'
    method="post"
    enctype='application/x-www-form-urlencoded'
  >
    <div class='row'>
      <div class='input-field col s12'>
        <textarea
          class='materialize-textarea'
          name='productId'
        ></textarea>
        <label for='textarea1'>Product Id</label>
      </div>
    </div>
    <button type='submit' class='btn teal darken-4' >Submit</button>
  </form>
  <form method='get' action='/dimashki/admin' >
      <button type='submit' class='btn red darken-4 ' >Cancel</button>
  </form>
</div>

